<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.prgmming.UserLoginServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EntityServlet</servlet-name>
        <servlet-class>com.prgmming.UserEntityServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EntityServlet</servlet-name>
        <url-pattern>/entity</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.prgmming.UserLogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductEntityServlet</servlet-name>
        <servlet-class>com.prgmming.ProductEntityServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductEntityServlet</servlet-name>
        <url-pattern>/productentity</url-pattern>
    </servlet-mapping>

</web-app>
